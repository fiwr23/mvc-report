{% extends 'base.html.twig' %}

{% block title %}Update {{ book.getTitle|e }}{% endblock %}

{% block body %}
<a href="{{ path('view_book_by_id', {bookid: book.getId|e}) }}"><span style=" font-size: 14px; color: black;">< Back</span></a>
<h1>{{ book.getTitle|e }}</h1>

<form name = "form_update_book" id = "form_update_book" method="POST" action="{{ path("update_book_post")}}">
    <label for="bookId">Id</label><br>
    <input type="input" id = "bookId" name = "bookId" value="{{ book.getId|e }}" readonly style="background-color: rgb(161, 234, 154);">
    <br>
    <label for="bookTitle">Title</label><br>
    <input type="input" id = "bookTitle" name = "bookTitle" value="{{ book.getTitle|e }}" required>
    <br>
    <label for="bookImage">Image</label><br>
    <input type="input" id = "bookImage" name = "bookImage" value="{{ book.getImage|e }}" required>
    <br>
    You can both use images locally stored as assets or remote images. 
    <br>Local asset URL begins with 'img/'.
    <br>Remote URL begins with 'http' or 'https'
    <br>
    <label for="bookAuthor">Author</label><br>
    <input type="input" id = "bookAuthor" name = "bookAuthor" value="{{ book.getAuthor|e }}" required>
    <br>
    <label for="bookIsbn">ISBN</label><br>
    <input type="input" id = "bookIsbn" name = "bookIsbn" value="{{ book.getIsbn|e }}" required>
    <br>
    <input type="submit" name="do_it" value="Update book">
</form>
{% endblock %}
